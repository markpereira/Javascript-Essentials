Functions

function myFunction() {
	console.log("We're in a function");
		// loops, if statements, anything!
		// other things
}

// sometime later

myFunction();

// define all your functions before you call them.

example

function myFunction( x,y ){
	var myVar = x + y;
	console.log (myVar);
}

// call function
myFunction(700, 320);

function addNumber( x,y ){
	add = x + y;
	console.log(add);
}

addNumber(4,5);

function multiplyNum ( x,y ){
	result = x * y;
	console.log(result);
	return result;
}

multiplyNum(3288, 40578);

